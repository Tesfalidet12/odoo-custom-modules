<odoo>
    <record id="realestate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="realestate_property_type_form_view" model="ir.ui.view">
        <field name="name">realestate.property.type.form.view</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form>

                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button
                                name="open_offer_view"
                                icon="fa-list"
                                type="object"
                                class="oe_stat_button">

                                <field name="offer_count" widget="line_count" string="Lines"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>

                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="title"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="property_type_list_view" model="ir.ui.view">
        <field name="name">property.type.list.view</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>