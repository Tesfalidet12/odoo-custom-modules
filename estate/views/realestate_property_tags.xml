<odoo>
    <record id="realestate_property_tags_action" model="ir.actions.act_window">
        <field name="name"> Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="property_tag_list_view" model="ir.ui.view">
        <field name="name">property.tag.list.view</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>
</odoo>